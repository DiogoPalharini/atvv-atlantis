{
  "compilerOptions": {
    "allowJs": true,               // Permite arquivos .js e .jsx
    "jsx": "react-jsx",            // Suporte ao JSX no estilo React 17+
    "noImplicitAny": false,        // Permite tipos 'any' impl√≠citos
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es6",
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
